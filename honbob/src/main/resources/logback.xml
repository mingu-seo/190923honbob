<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %5p %c{2} - %m%n</pattern>
		</encoder>
	</appender>
	
	<logger name="test">
		<level value="DEBUG"/>
		<appender-ref ref="stdout"/>
	</logger>
	
</configuration>