<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mybatis 사용 -->
<mapper namespace="Review">
	
	<select id="getReviews" resultType="vo.ReviewVO">
		select * from review ORDER BY registdate DESC LIMIT 8;
	</select>

	<select id="getReviewDetail" resultType="vo.ReviewVO">
		select * from review where id=11;
	</select>

	<select id="getReviewDelete" resultType="vo.ReviewVO">
		select * from review where id=11;
	</select>



	<select id="searchCount" resultType="int">
		select count(*) from restaurantvo;
	</select>

</mapper>
